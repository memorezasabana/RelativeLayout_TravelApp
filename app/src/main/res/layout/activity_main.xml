<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E7ECEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search"
            android:layout_width="267dp"
            android:layout_height="57dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/search"/>

        <ImageView
            android:id="@+id/btn_fav"
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_fav"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hehaskyview_btn"
            android:layout_width="344dp"
            android:layout_height="146dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/hehaskyview_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/malioboro_btn"
            android:layout_width="153dp"
            android:layout_height="210dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/malioboro_btn"/>

        <ImageView
            android:id="@+id/pantaitimang_btn"
            android:layout_width="153dp"
            android:layout_height="210dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/pantaitimang_btn"
            android:layout_marginStart="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gerejaayam_btn"
            android:layout_width="153dp"
            android:layout_height="210dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/gerejaayam_btn"/>

        <ImageView
            android:id="@+id/lavatour_btn"
            android:layout_width="153dp"
            android:layout_height="210dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/lavatour_btn"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="35dp" />
    </LinearLayout>
</LinearLayout>

